{
  "name": "boilerplate-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run build && cross-env APP_ENV=production node dist/index.js",
    "dev": "cross-env APP_ENV=dev nodemon ./src/index.ts --exec ts-node",
    "build": "npm run lint:code && rimraf dist && tsc --project ./tsconfig.json",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:code": "eslint --fix --max-warnings 0 --ext .ts ./src",
    "code-format": "npm run format && npm run lint:code"
  },
  "husky": {
    "pre-commit": "npm run code-format"
  },
  "keywords": [],
  "author": "Juan Batty",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.4",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^27.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0"
  }
}

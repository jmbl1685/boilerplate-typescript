{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "strictNullChecks": false,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": [".nyc_output", ".vscode", "coverage", "dist", "node_modules"]
}
